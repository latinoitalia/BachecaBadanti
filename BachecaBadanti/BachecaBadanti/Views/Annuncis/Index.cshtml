@model IEnumerable<BachecaBadanti.Annunci>

@{
    ViewBag.Title = "Index";
}

<h2>Totale @ViewBag.Total Annunci in @ViewBag.City</h2>

 
@foreach (var item in Model)
{


    <div class="row">
        <div class="col-md-3">
            foto

        </div>
        <div class="col-md-9">
            <h2>@Html.DisplayFor(modelItem => item.Titolo)</h2>
            <h3>@item.DataOra.Value.ToShortDateString() - @Html.DisplayFor(modelItem => item.Location)</h3>
            <p>@Html.DisplayFor(modelItem => item.Descrizione)</p>
            <div style="text-align:right"><h3> <a href="@item.Link" target="_blank">Subito.it</a></h3></div>

        </div>
    </div>
              
                }
